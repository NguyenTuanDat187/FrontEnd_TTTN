<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/dialog_background"
    android:layout_margin="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/taikhoan"
            android:background="@drawable/bg_circle_blue"
            android:scaleType="centerCrop"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Họ và tên"
            android:textStyle="bold"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tvCommunity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cộng đồng"
            android:textColor="@color/gray" />
    </LinearLayout>

    <!-- Content -->

    <!-- Image -->
    <EditText
        android:id="@+id/edtPostContent"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="top"
        android:hint="Nội dung bài viết..."

        android:padding="8dp"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imgPostPreview"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:background="@color/mau_nen"
        android:contentDescription="ảnh"
        android:textAlignment="center"
        android:text="ảnh"/>

    <!-- Footer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/yeuthich"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Yêu thích"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/binhluan"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Bình luận"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/chiase"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Chia sẻ"/>
    </LinearLayout>
</LinearLayout>
